<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.Toolbar
        android:id="@+id/main.toolbar"
        style="@style/MyToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ToolbarPopupTheme">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButtonMore"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/imageButtonMore"
                android:tint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_backarrow" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:elevation="4dp"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="4dp"
        app:contentPadding="@dimen/spacing_16dp"
        app:layout_behavior=".CardViewAutoHideBehavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/spacing_8dp">

            <TextView
                android:id="@+id/course_title"
                tools:layout_editor_absoluteX="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_8dp"
                android:fontFamily="@font/robotomedium"
                android:text="计算机组成原理"
                android:textColor="#DE000000"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/course_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_8dp"
                android:fontFamily="@font/robotomedium"
                android:text="09月03日-12月16日 10:00 - 12:40 @C507"
                android:textColor="#99000000"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/course_title" />

            <TextView
                android:id="@+id/course_code"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_8dp"
                android:fontFamily="@font/robotomedium"
                android:text="编号：CS104"
                android:textColor="#61000000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_schedule" />

            <TextView
                android:id="@+id/course_class"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_8dp"
                android:fontFamily="@font/robotomedium"
                android:text="班级：D02"
                android:textColor="#61000000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_code" />

            <TextView
                android:id="@+id/course_faculty"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_8dp"
                android:fontFamily="@font/robotomedium"
                android:text="学院：资讯科技学院"
                android:textColor="#61000000"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/course_class"
                app:layout_constraintTop_toBottomOf="@id/course_credit" />

            <TextView
                android:id="@+id/course_credit"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_8dp"
                android:fontFamily="@font/robotomedium"
                android:text="学分：3.0"
                android:textColor="#61000000"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/course_code"
                app:layout_constraintTop_toBottomOf="@id/course_schedule" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>